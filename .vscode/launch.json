{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ParLang",
            "request": "launch",
            "mainClass": "org.abcd.examples.ParLang.ParLang",
            "projectName": "par-lang",
            "args": ["actorExample.par"], // Add this line if you want to pass arguments to the main method
            "cwd": "${workspaceFolder}", // This line sets the working directory to the root of your workspace
            "console": "integratedTerminal" // This line ensures that the output is shown in the integrated terminal
        },
        {
            "type": "java",
            "name": "AnotherPackage",
            "request": "launch",
            "mainClass": "org.abcd.examples.AnotherPackage.Main",
            "projectName": "another-package",
            "args": ["anotherExample.par"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
